<div class="home-container">
  <div class="home-content">
    <h1>Welcome to Website Diff Checker</h1>
    <div class="info-card">
      <form class="url-form" action="/analyze" method="post">
        <div class="form-group">
          <label for="website_url">Website URL:</label>
          <input 
            type="url" 
            id="website_url" 
            name="website_url" 
            placeholder="https://example.com"
            required
            class="url-input"
          >
        </div>
        
        <div class="button-container">
          <button type="submit" class="cta-button">
            Analyze Website
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
